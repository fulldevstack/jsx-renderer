{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "Renderer.createElement",
    "moduleResolution": "node",
    "removeComments": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}